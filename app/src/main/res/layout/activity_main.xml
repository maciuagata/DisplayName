<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="75dp"
            android:layout_marginVertical="25dp"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="My applications"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_name"
                android:layout_marginTop="50dp"
                android:text="Label" />

            <EditText
                android:id="@+id/nameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameLabel"
                android:gravity="center"
                android:hint="Input your name"
                android:textColorHint="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/nameFieldHelpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameField"
                android:text="Help text (optional)" />

            <Button
                android:id="@+id/buttonEnterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameFieldHelpText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Enter" />

            <RelativeLayout
                android:id="@+id/nameBoxLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonEnterName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/myNameIsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="25dp"
                    android:text="Your name is ..."
                    android:textColor="@android:color/black"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/displayNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/myNameIsLabel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50dp"
                    android:text="Name"
                    android:textSize="50dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameBoxLayout"
                android:layout_centerHorizontal="true"
                android:text="Agata Maciulevic"
                android:textSize="25dp"
                android:layout_marginVertical="10dp"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

